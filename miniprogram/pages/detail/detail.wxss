/* pages/detail/detail.wxss */
.background{
  background-color:#ddd;
}
.bg{
  border-radius: 10rpx;
  padding: 0px 10rpx;
}
.bg-0{
  background-color: #e1f5fe;
  margin-left: 20rpx;
}
.bg-1{
  background-color: #b3e5fc;
  margin-left: 15rpx;
}
.bg-2{
  background-color: #81d4fa;
  margin-left: 15rpx;
}
.bg-3{
  background-color: #80d8ff;
  margin-left: 15rpx;
}
.bg-4{
  background-color: #40c4ff;
  margin-left: 15rpx;
}
.space{
  margin: 20rpx;
}
.question{
  padding: 40rpx 10rpx;
  font-size: 40rpx;
  background-color: #fff;
}
.commentArea{
  padding: 40rpx 10rpx;
  font-size: 40rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.comment-content{
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 30rpx;
}
.comment{
  background-color: #eee;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  z-index: 5;
  padding: 5rpx 10rpx;
}
.comment-input-focus{
  background-color: #fff;
  margin-top: 3rpx;
  margin-left: 20rpx;
  padding-left: 30rpx;
  padding-top: 16rpx;
  border-radius: 40rpx;
  width: 70%;
  min-height: 65rpx;
  max-height: 300rpx;
  line-height: 65rpx;
}
.comment-input-nofocus{
  background-color: #fff;
  margin-top: 10rpx;
  margin-left: 20rpx;
  padding-left: 30rpx;
  padding-top: 16rpx;
  border-radius: 40rpx;
  width: 70%;
  min-height: 65rpx;
  max-height: 65rpx;
  line-height: 65rpx;
  max-lines: 1;
  overflow: hidden;
}
.comment-btn{
  border-radius: 30rpx;
  background-color: #4fc3f7;
  margin: 5rpx 15rpx;
  font-size: 35rpx;
  display: flex;
  justify-content:center;
  align-items: center;
}