/* pages/addQuestion/addQuestion.wxss */
.tip{
  font-size: 14px;
  color: gray;
}
.category-nochoose{
  border: solid;
  border-width: 1rpx;
  border-color: #ddd;
  border-radius: 20rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  height: 100rpx;
  width: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.category-choose{
  border: solid;
  border-width: 1rpx;
  border-color: #ddd;
  border-radius: 20rpx;
  background-color: #b3e5fc;
  margin-left: 50rpx;
  margin-top: 20rpx;
  height: 100rpx;
  width: 170rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.line{
  height: 3rpx;
  background-color: #ccc;
  margin-top: 20rpx;
}

.title{
  font-weight: bold;
  padding: 5px;
  font-size: 20px;
}
.title-small{
  font-weight: bold;
  padding: 5px;
  font-size: 15px;
}
.detail{
  border: solid;
  border-width: 2rpx;
  border-color: #ccc;
  border-radius: 30rpx;
  width: 90%;
  margin: 20rpx;
  padding: 20rpx;
}
.btn-group{
  text-align: center;
  height: 50px;
  margin-top: 50rpx;
}
.btn-cancel{
  margin: 20rpx;
  margin-left: 120rpx;
  float: left;
  padding: 10rpx 60rpx;
  border-radius: 30rpx;
  background-color: #e1f5fe;
}
.btn-submit{
  margin: 20rpx;
  margin-right: 120rpx;
  float: right;
  padding: 10rpx 60rpx;
  border-radius: 30rpx;
  background-color: #4fc3f7;
}